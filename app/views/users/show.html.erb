<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
     </section>
  </aside>
	<aside class="span4">
		<section>	
			<%= form_tag("/search", :method=>"get") do %>		
				<%= label_tag(:query, "Search Forum: ")%>
				<%= text_field_tag(:query) %>	
				<%= label_tag(:queryT, "Search Keyword: ")%>
				<%= text_field_tag(:queryT) %>
				<%= submit_tag("Search",class: "btn btn-large btn-warning")%> 
			<% end %>
		
		</section>
	</aside>
<div class = "rows">

	<aside class="span8">
		<ul class="res">
			<% if session[:res]%>
				<%if !session[:res][0].nil?%>
				<% i = 0 %>
				<% session[:res].each do |r| %>		
					<% i=i+1 %>
					<li>
						<%=i%> <%= link_to r, r, :target=>"_blank" %>
					</li>
					<%end%>
				<% else %>
						<h4><b> Sorry, We have not found the item</b></h4>
		  	<%end%>
			<%end%>
		</ul>
	</aside>
</div>
</div>
